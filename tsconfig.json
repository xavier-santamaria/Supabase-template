{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "supabase", "supabase/**/*"],
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  }
}
